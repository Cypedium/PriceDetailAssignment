@model Product
@{
    ViewData["Title"] = "Search";
}

<h1>Search Product</h1>

<form asp-controller="Products" asp-action="Search" method="post" class="btn btn-success">

<div asp-validation-summary="All"></div>

<br />

<label asp-for="CatalogEntryCode"></label>
<input asp-for="CatalogEntryCode" />
<span asp-validation-for="CatalogEntryCode"></span>
<br />

<label asp-for="MarketId"></label>
<select asp-for="MarketId" class="form-control">
        <option value="da">da</option>
        <option value="de">de</option>
        <option value="en">en</option>
        <option value="es">es</option>
        <option value="fi">fi</option>
        <option value="fr">fr</option>
        <option value="ko">ko</option>
        <option value="nl">nl</option>
        <option value="no">no</option>
	    <option value="sv">sv</option>
   </select>
<span asp-validation-for="MarketId"></span>
<br />

<label asp-for="CurrencyCode"></label>
<select asp-for="CurrencyCode" class="form-control">
    <option value="AUD">AUD</option>
    <option value="CAD">CAD</option>
    <option value="CHF">CHF</option>
    <option value="DKK">DKK</option>
    <option value="EUR">EUR</option>
    <option value="GBP">GBP</option>
    <option value="KRW">KRW</option>
    <option value="NOK">NOK</option>
    <option value="SEK">SEK</option>
    <option value="USD">USD</option>
</select>
<span asp-validation-for="CurrencyCode"></span>
<br />

<br />
<input type="submit" value="Search Product" />
<br />
<br />
</form>


